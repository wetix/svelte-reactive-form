{
  "name": "svelte-reactive-form-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "license": "MIT",
  "repository": "https://github.com/wetix/svelte-reactive-form",
  "scripts": {
    "test": "jest packages",
    "dev": "rollup -w --config rollup.dev.config.js",
    "start": "sirv public --port 5500",
    "build": "rollup -c",
    "validate": "lerna run validate",
    "tsd": "lerna run tsd"
  },
  "devDependencies": {
    "@babel/core": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "@rollup/plugin-commonjs": "^22.0.0-4",
    "@rollup/plugin-node-resolve": "^13.1.1",
    "@rollup/plugin-typescript": "^8.3.0",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/svelte": "^3.0.3",
    "@tsconfig/svelte": "^3.0.0",
    "@types/jest": "^27.0.3",
    "babel-jest": "^27.4.5",
    "jest": "^27.4.5",
    "jest-transform-svelte": "^2.1.1",
    "lerna": "^4.0.0",
    "rollup": "^2.61.1",
    "rollup-plugin-bundle-size": "^1.0.3",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "sirv-cli": "^1.0.14",
    "svelte": "^3.38.2",
    "svelte-check": "^2.2.11",
    "svelte-jester": "^2.1.5",
    "svelte-preprocess": "^4.10.1",
    "ts-jest": "^27.1.2",
    "tslib": "^2.3.1",
    "typescript": "^4.5.4",
    "uuid": "^8.3.2",
    "yup": "^0.32.11"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "globals": {
      "ts-jest": {
        "isolatedModules": false
      }
    },
    "testPathIgnorePatterns": [
      "node_modules"
    ],
    "bail": false,
    "verbose": true,
    "transformIgnorePatterns": [
      "node_modules"
    ],
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest",
      "^.+\\.js$": "babel-jest",
      "^.+\\.svelte$": [
        "svelte-jester",
        {
          "preprocess": true
        }
      ]
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "svelte"
    ]
  }
}
