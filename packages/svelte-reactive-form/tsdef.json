{
  "compilerOptions": {
    "rootDir": "./src",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./types",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["jest", "node", "svelte"]
  },
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": ["src/*", "src/components/*"],
  "exclude": [
    "src/index.ts",
    "**/*.spec.ts",
    "__tests__*",
    "node_modules/*",
    "__sapper__/*",
    "public/*",
    "*.d.ts",
    "**/*.d.ts"
  ]
}
